{
  "hosting": {
    "public": "website",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "headers": [
    {
      "source": "/**/*.@(jpg|jpeg|gif|png)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, immutable"
        }
      ]
    },
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
    {
      "source": "/**/*.@(css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, immutable"
        }
      ]
    },
    {
      "source": "/**/*.@(js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, immutable"
        }
      ]
    },
    {
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "**",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "https://storage.googleapis.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://www.google.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://www.google.ca",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://cse.google.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://www.gstatic.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://fonts.googleapis.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "https://firebasestorage.googleapis.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "maps.googleapis.com",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "max-age=3600"
        }
      ]
    }
  ]
}
