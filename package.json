{
  "name": "pwa-auth",
  "type": "module",
  "author": "Jacek Markiewicz <jack.solutionbox@gmail.com>(https://www.jackspublishing.com)",
  "version": "3.2.1",
  "description": "User Management Component with 3 HTML Tags, and 1 Boilerplate Function to display user icon, sign up, login, log out, change account details, delete account.",
  "homepage": "https://pwa-authentic.firebaseapp.com",
  "main": "./project/esm/pwa-auth.js",
  "types": "./project/esm/pwa-auth.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/busynest/user"
  },
  "keywords": [
    "login",
    "pwa",
    "pwa-auth",
    "auth",
    "firebase",
    "icon",
    "drawer",
    "settings",
    "lit",
    "redux"
  ],
  "exports": {
    ".": {
      "default": "./base/export/pwa-auth.js",
      "types": "./base/export/pwa-auth.d.ts"
    }
  },
  "license": "BSD-3-Clause",
  "flat": true,
  "scripts": {
    "demo": "web-dev-server --node-resolve --watch --open --app-index demonstration/index.html",
    "website": "web-dev-server --node-resolve --watch --open --app-index website/index.html",
    "rollup": "rollup -c",
    "prod": "tsc --project tsconfig.prod.json",
    "mono": "tsc app.ts util.ts --target esnext --outfile index.js",
    "declair": "tsc index.js --declaration --emitDeclarationOnly",
    "project": " tsc && rollup -c"
  },
  "dependencies": {
    "pwa-helpers": "^0.9.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0"
