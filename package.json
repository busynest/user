    "babel-plugin-template-html-minifier": "^4.1.0",
    "firebase": "^12.4.0",
    "lit": "^3.3.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-html-literals": "^2.0.1",
