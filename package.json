  "repository": {
    "type":         "git",
    "url":          "https://github.com/busynest/user"
  },
  "bugs": {
    "url":          "https://github.com/busynest/user/issues"
  },
  "funding": {
    "type":         "individual",
    "url":          "https://github.com/sponsors/busynest"
  },
  "keywords": [
    "login",
    "pwa",
    "pwa-auth",
    "auth",
    "firebase",
    "icon",
    "drawer",
    "settings",
    "lit",
    "redux"
  ],
  "main":           "./base/export/pwa-auth.js",
  "types":          "./base/export/pwa-auth.d.ts",
  "exports": {
    ".": {
      "default":    "./base/export/pwa-auth.js",
      "types":      "./base/export/pwa-auth.d.ts"
    },
    "./source/development/pwa-auth": {
      "default":    "./source/esm/pwa-auth.js",
      "types":      "./source/esm/pwa-auth.d.ts"
    },
    "./source/esm/pwa-auth": {
      "default":    "./source/esm/pwa-auth.js"
    }
  },
  "license":        "SEE LICENSES.txt",
